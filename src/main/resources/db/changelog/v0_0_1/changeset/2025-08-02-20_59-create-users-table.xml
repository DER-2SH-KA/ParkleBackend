<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.33.xsd">

    <changeSet id="2025-08-02-20_59-create-users-table" author="DER-2SH-KA">
        <createTable tableName="users">
            <column name="id" type="uuid">
                <constraints nullable="false" unique="true" primaryKey="true" primaryKeyName="PK_users" />
            </column>

            <column name="role_id" type="uuid">
                <constraints nullable="false" />
            </column>

            <column name="login" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" />
            </column>

            <column name="email" type="VARCHAR(320)">
                <constraints nullable="false" unique="true" />
            </column>

            <column name="password" type="VARCHAR(60)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>