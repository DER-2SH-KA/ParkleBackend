<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.33.xsd">

    <changeSet id="2025-08-02-21_14-create-users-role_id-index" author="DER-2SH-KA">
        <preConditions onFail="CONTINUE">
            <not>
                <indexExists tableName="users" indexName="INDEX_users_role_id" />
            </not>
        </preConditions>

        <createIndex tableName="users" indexName="INDEX_users_role_id">
            <column name="role_id" type="uuid" />
        </createIndex>
    </changeSet>

</databaseChangeLog>